<div class="bg-indigo-200 p-6 rounded-lg shadow-md w-full max-w-xl h-[80vh] overflow-y-auto justify-self-center mt-6">
    <h1 class="text-2xl font-bold mb-4 text-center">Hello! I am here to help you</h1>

    <div class="space-y-4">
        <% chatHistory.forEach((msg)=> { %>
            <div class="<%= msg.role === 'user' ? 'text-right' : 'text-left' %>">
                <div class="inline-block px-4 py-2 rounded-lg
            <%= msg.role === 'user' ? 'bg-indigo-500 text-white' : 'bg-gray-200 text-gray-800' %>">
                    <%- msg.content %>
                </div>
            </div>
            <% }) %>
    </div>


    <form action="/chat" method="POST" class="mt-6 space-y-4">
        <textarea type="textarea" name="question" placeholder="Ask something..."
            class="w-full px-4 py-2 border rounded-lg focus:outline-none" required></textarea>


        <button type="submit" class="w-full bg-indigo-500 text-white px-4 py-2 rounded-lg hover:bg-indigo-600">
            Ask
        </button>
    </form>


    <form action="/chat/clear" method="POST" class="mt-2">
        <button type="submit" class="w-full bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">
            Clear Chat
        </button>
    </form>

</div>