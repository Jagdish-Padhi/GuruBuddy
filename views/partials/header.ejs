<!-- for schedules page -->
<script src="https://cdn.tailwindcss.com"></script>
<script defer>
  function toggleDay(dayId) {
    const content = document.getElementById(`content-${dayId}`);
    content.classList.toggle('hidden');
  }

  function toggleAll(expand = true) {
    const contents = document.querySelectorAll('[id^="content-"]');
    contents.forEach(content => {
      if (expand) {
        content.classList.remove('hidden');
      } else {
        content.classList.add('hidden');
      }
    });
  }
</script>


<!-- for AI chat button and summary page-->
<style>
  /* Floating AI Button */
  .floating-ai-btn {
    position: fixed;
    bottom: 100px;
    right: 30px;
    width: 72px;
    height: 72px;
    border-radius: 50%;
    border: 3px solid indigo;
    box-shadow: 0 0 0 rgba(117, 230, 218, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    z-index: 1000;
    animation: glowPulse 1.5s infinite ease-in-out;
    transition: transform 0.3s ease, width 0.3s ease, height 0.3s ease;
  }

  .floating-ai-btn:hover {
    transform: scale(1.2);
    box-shadow: 0 0 30px 10px rgba(59, 130, 246, 0.6);
    transform: scale(1.1);
  }

   
  /* Glowing effect for the button */
  @keyframes glowPulse {
  0% {
    box-shadow: 0 0 0 0 rgb(146, 132, 255), 0 0 5px rgb(146, 132, 255);
  }
  50% {
    box-shadow: 0 0 20px 10px rgba(93, 7, 198, 0.8), 0 0 25px rgba(93, 7, 198, 0.6);
  }
  100% {
    box-shadow: 0 0 0 0 rgb(150, 73, 237), 0 0 5px rgb(150, 73, 237);
  }
}

  /*   styles for the smart summarizer   */
  .recording-glow {
      box-shadow: 0 0 30px 10px rgba(59, 130, 246, 0.6);
      transform: scale(1.1);
    }

    .loader {
      font-weight: bold;
      color: #4b5563;
    }

    .toast {
      background-color: #e0e7ff;
      padding: 12px;
      margin-top: 10px;
      border-left: 6px solid #4f46e5;
      font-weight: 500;
      border-radius: 6px;
    }

    .hidden {
      display: none;
    }
  .page-header {
    text-align: center;
    margin-top: 20px;
    font-size: 24px;
    font-weight: bold;
  }

  .buttons-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }
</style>