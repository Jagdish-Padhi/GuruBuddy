<!-- for schedules page -->
<script src="https://cdn.tailwindcss.com"></script>
  <script defer>
    function toggleDay(dayId) {
      const content = document.getElementById(`content-${dayId}`);
      content.classList.toggle('hidden');
    }

    function toggleAll(expand = true) {
      const contents = document.querySelectorAll('[id^="content-"]');
      contents.forEach(content => {
        if (expand) {
          content.classList.remove('hidden');
        } else {
          content.classList.add('hidden');
        }
      });
    }
  </script>


<!-- for AI chat button -->
<style>
    /* Floating AI Button */
    .floating-ai-btn {
      position: fixed;
      bottom: 100px;
      right: 30px;
      width: 72px;
      height: 72px;
      background-color: #189AB4;
      border-radius: 50%;
      box-shadow: 0 0 0 rgba(117, 230, 218, 0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 40px;
      font-weight: bold;
      cursor: pointer;
      z-index: 1000;
      animation: glowPulse 2s infinite;
      transition: transform 0.3s ease, width 0.3s ease, height 0.3s ease;
    }

    .floating-ai-btn:hover {
      transform: scale(1.1);
      background-color: #75E6DA;
    }

    /* Button when recording is in progress */
    .floating-ai-btn.recording {
      width: 120px;
      height: 120px;
      bottom: 50%;
      right: 50%;
      transform: translate(50%, 50%) scale(1.5);
      background-color: #FF6347; /* Change color during recording */
    }

    /* Glowing effect for the button */
    @keyframes glowPulse {
      0% { box-shadow: 0 0 0 0 rgba(117, 230, 218, 0.6); }
      50% { box-shadow: 0 0 0 20px rgba(117, 230, 218, 0); }
      100% { box-shadow: 0 0 0 0 rgba(117, 230, 218, 0); }
    }

    /* Additional styles for the smart summarizer page */
    .page-header {
      text-align: center;
      margin-top: 20px;
      font-size: 24px;
      font-weight: bold;
    }

    .buttons-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
    }
  </style>
 
